{% extends 'baseBack.html.twig' %}

{% block body %}
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Discover our Tunisia</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->
    <!-- team section -->
    <div class="mt-150">
        <div class="container">
            
            <div class="container">
                <div class="row">
                    {% for camping in page %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card">
                            <img src="{{ asset('img/team/' ~ camping.imagecamp) }}" >
                                <div class="card-body">
                                    <h5 class="card-title"><strong>AddressS Camping :</strong> {{ camping.adressecamp }}</h5>
                                    <p class="card-text"><strong>Prix camping : </strong>{{ camping.prixcamp }} DT</p>
                                    <p class="card-text"><strong>Nb personnes max :</strong> {{ camping.nbpmax }}</p>
                                    <p class="card-text"><strong>Date d√©but : </strong>{{ camping.datedebut|date('Y-m-d') }}</p>
                                    <p class="card-text"><strong>Date fin : </strong>{{ camping.datefin|date('Y-m-d') }}</p>
                                    <a href="{{ path('app_objectif2', {'id': camping.id}) }}" class="btn btn-primary">Voir objectif camp</a>
                                    <a href="{{ path('edit_camping_item', {'id': camping.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                {% include 'camping/delete.html.twig' %}

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- Pagination -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pagination-wrap">
                            {{ knp_pagination_render(page) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
